<UserControl
    x:Class="Minutes.MVVM.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Minutes.MVVM.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:minutes="clr-namespace:Minutes"
    xmlns:viewModels="clr-namespace:Minutes.MVVM.ViewModels"
    d:DesignHeight="900"
    d:DesignWidth="1600"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml" />
                <ResourceDictionary Source="/Resources/Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadMainViewCommand}" />
        </b:EventTrigger>
        <b:EventTrigger EventName="Closing">
            <b:InvokeCommandAction Command="{Binding LoadMainViewCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <UserControl.Background>
        <SolidColorBrush Color="{StaticResource WindowBackgroundColor}" />
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        <Border
            Margin="40,40,40,0"
            Padding="20"
            BorderBrush="{StaticResource LightGray}"
            BorderThickness="4"
            CornerRadius="10">
            <ContentControl Content="{Binding TextDisplayNavigation.CurrentView}" />

        </Border>
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Grid.Row="1"
                Width="100"
                Height="100"
                Command="{Binding RecordCommand}"
                Content="{Binding RecordButtonText}"
                FontFamily="{StaticResource Antipasto}"
                FontSize="30"
                FontWeight="Light"
                Style="{StaticResource RoundedButton}" />
            <minutes:AudioVisualizerControl
                Width="400"
                AudioLevelsProperty="{Binding AudioLevels}"
                BarCornerRadius="2"
                BarMargin="1"
                BarWidth="4"
                MaxHeightValue="120" />
            <CheckBox Style="{StaticResource AnimatedToggleButton}" />
        </StackPanel>
    </Grid>
</UserControl>
