<Window
    x:Class="Minutes.Windows.AlwaysTopWidgetWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Minutes.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AlwaysTopWidgetWindow"
    AllowsTransparency="True"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d"
    MouseLeftButtonDown="Window_DragOver">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="10"
            GlassFrameThickness="0"
            ResizeBorderThickness="10" />
    </WindowChrome.WindowChrome>
    <Grid>
        <ContentControl Content="{Binding AlwaysTopWidgetNavigationService.CurrentView}" />
    </Grid>
</Window>
